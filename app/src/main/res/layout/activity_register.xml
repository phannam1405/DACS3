<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_account"
    android:gravity="center"
    tools:context=".ui.view.RegisterActivity">
        <LinearLayout
            android:layout_margin="30dp"
            android:background="@drawable/custom_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="112dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_app"  />

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Sign Up" />


            <EditText
                android:id="@+id/edtLoginUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:hint="Email"
                android:drawableRight="@drawable/icon_person"
                android:textColor="@color/white"
                android:drawablePadding="8dp"
                android:textColorHint="@color/white"
                android:textSize="12dp"
                />

            <EditText
                android:id="@+id/edtLoginPwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:drawableRight="@drawable/icon_lock"
                android:textColor="@color/white"
                android:drawablePadding="8dp"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edtLoginConfirmPwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:hint="Confirm Password"
                android:textColorHint="@color/white"
                android:drawableRight="@drawable/icon_lock"
                android:textColor="@color/white"
                android:drawablePadding="8dp"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:layout_marginTop="8dp"
                android:text="SIGN UP" />

            <TextView
                android:id="@+id/txtRe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=" Sign In "
                android:textSize="16dp"
                android:layout_marginTop="18dp"
                android:gravity="center"/>

        </LinearLayout>

</LinearLayout>